{
    "name": "task-manager",
    "version": "1.0.0",
    "description": "Task management app",
    "main": "index.js",
    "scripts": {
        "dev": "npm start",
        "start": "webpack-dev-server --env.ENVIRONMENT=development --config webpack.dev.js --host 0.0.0.0 --port 3000 --progress",
        "build": "webpack -p --env.ENVIRONMENT=production --config webpack.prod.js --progress",
        "test": "jest"
    },
    "author": "Jeffrey Huang",
    "license": "ISC",
    "dependencies": {
        "antd": "^4.1.0",
        "axios": "^0.19.2",
        "connected-react-router": "^6.8.0",
        "history": "^4.10.1",
        "less": "^3.11.1",
        "moment": "^2.24.0",
        "prop-types": "^15.7.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "react-router": "^5.1.2",
        "react-router-dom": "^5.1.2",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "universal-cookie": "^4.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.9.6",
        "@babel/preset-react": "^7.9.4",
        "axios-mock-adapter": "^1.18.1",
        "babel-loader": "^8.1.0",
        "case-sensitive-paths-webpack-plugin": "^2.3.0",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^3.4.2",
        "dotenv": "^8.2.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "enzyme-to-json": "^3.4.4",
        "html-webpack-plugin": "^4.0.4",
        "jest": "^25.4.0",
        "less-loader": "^5.0.0",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.1",
        "redux-devtools-extension": "^2.13.8",
        "redux-mock-store": "^1.5.4",
        "sass-loader": "^8.0.2",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.1.3",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-manifest-plugin": "^2.2.0",
        "webpack-merge": "^4.2.2"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "10"
                    }
                }
            ],
            "@babel/preset-react"
        ],
        "plugins": [
            [
                "@babel/plugin-proposal-class-properties",
                {
                    "loose": true
                }
            ]
        ]
    },
    "jest": {
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(jsx|js)$",
        "verbose": true,
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "moduleNameMapper": {
            "\\.(css|sass|scss)$": "<rootDir>__tests__/setup/styleMock.js",
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>__tests__/setup/fileMock.js"
        },
        "testPathIgnorePatterns": [
            "<rootDir>/__tests__/setup/",
            "/node_modules/",
            "/dist/"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "setupFiles": [
            "<rootDir>__tests__/setup/setupEnzyme.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>__tests__/setup/matchMedia.js"
        ]
    }
}
